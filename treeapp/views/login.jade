extends layout
block content
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    // Website CSS style
    link(rel='stylesheet', type='text/css', href='/spreadsheet/login.css')
    // Website Font style
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css')
    // Google Fonts
    link(href='https://fonts.googleapis.com/css?family=Passion+One', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Oxygen', rel='stylesheet', type='text/css')
    title Admin
    .container
      .row.main
        .panel-heading
          .panel-title.text-center
            img.myButton(src='http://198.100.47.134/images/uploads/logo2.png')
            // <hr />
        .main-login.main-center
          form.form-horizontal(method='post', action='#')
            .form-group
              a.btn.btn-block.btn-social.btn-facebook(href='/auth/facebook')
                span.fa.fa-facebook
                |  Sign in with Facebook
            .form-group
              label.cols-sm-2.control-label(for='username') Username
              .cols-sm-10
                .input-group
                  span.input-group-addon
                    i.fa.fa-users.fa(aria-hidden='true')
                  input#username.form-control(type='text', name='username', placeholder='Enter your Username')
            .form-group
              label.cols-sm-2.control-label(for='password') Password
              .cols-sm-10
                .input-group
                  span.input-group-addon
                    i.fa.fa-lock.fa-lg(aria-hidden='true')
                  input#password.form-control(type='password', name='password', placeholder='Enter your Password')
            .form-group
              button.btn.btn-primary.btn-lg.btn-block.login-button(type='button') Log In
            .login-register
              a(href='regist.jade') Register
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
